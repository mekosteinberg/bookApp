<%- include('./partials/header') %>

    <div class="bookshelfContainer">


        <div>
            <h2>Book Details</h2>

            <dl class="card" style="width: 18rem;">
                <dt class="card-title">Title: <%=data.title%>
                </dt>
                <dt class="card-title">Author: <%=data.authorLast%>, <%=data.authorFirst%>
                </dt>

                <dt class="card-title">Own Status:</dt>
                <dd><input type="checkbox" name="audio" <%=data.own.audio ? "checked" : "" %>
                    disabled>Audiobook<br />
                    <input type="checkbox" name="ebook" <%=data.own.ebook ? "checked" : "" %>
                    disabled>e-Book<br />
                    <input type="checkbox" name="paper" <%=data.own.paper ? "checked" : "" %>
                    disabled>Paper/Hard-back<br />
                </dd>
                <dt class="card-title">Read Status:</dt>
                <dd><input type="radio" name="readStatus" value="reading" <%=data.readStatus==='reading' ? "checked"
                        : "" %> disabled>Reading
                    It<br />
                    <input type="radio" name="readStatus" value="read" <%=data.readStatus==='read' ? "checked" : "" %>
                    disabled>Finished
                    It<br />
                    <input type="radio" name="readStatus" value="wantToRead" <%=data.readStatus==='wantToRead'
                        ? "checked" : "" %> disabled>Want to Read<br />
                </dd>
                <dt class="card-title">Tags: <%=data.tags%>
                </dt>
            </dl>
        </div>
        <div class="backEdit">
            <a href="/bookshelf" class="btn btn-sm btn-primary">Back to Shelf</a>
            <a href="/bookshelf/<%=data._id%>/edit" class="btn btn-sm btn-warning">Edit This</a>
        </div>
        <!-- <a href="/bookshelf"><img src="" alt="">Delete</a> -->
        <form class="" action="/bookshelf/<%=data._id%>?_method=DELETE" method="POST">
            <input class="btn btn-sm btn-danger" type="submit" value="Delete"
                onclick="return confirm('Do you really want to delete this book?')" />
        </form>
    </div>

    <%- include('./partials/footer') %>